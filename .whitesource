{
  "scanSettings": {
    "configMode": "AUTO",
    "configExternalURL": "",
    "projectToken": "",
    "baseBranches": []
  },
  "scanSettingsSAST": {
    "enableScan": false,
    "scanPullRequests": false,
    "incrementalScan": true,
    "baseBranches": [],
    "snippetSize": 10
  },
  "checkRunSettings": {
    "vulnerableCheckRunConclusionLevel": "failure",
    "displayMode": "diff",
    "useMendCheckNames": true
  },
  "checkRunSettingsSAST": {
    "checkRunConclusionLevel": "failure",
    "severityThreshold": "high"
  },
  "issueSettings": {
    "minSeverityLevel": "LOW",
    "issueType": "DEPENDENCY"
  },
  "remediateSettings": {
    "enableRenovate": "true",
    "transitiveRemediation": "true",
    "extends": [
      ":dependencyDashboard",
      "github>whitesource/merge-confidence:beta",
      ":ignoreModulesAndTests",
      "group:monorepos",
      "group:recommended",
      "replacements:all",
      "workarounds:all"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 5,
    "commitMessagePrefix": "renovate: ",
    "ignoreDeps": ["node","react","react-dom","d3","@mswjs/interceptors"],
    "packageRules": [
      {
        "matchUpdateTypes": ["major"],
        "automerge": false
      },
      {
        "matchUpdateTypes": ["minor", "patch", "pin"],
        "automerge": true
      },
      {
        "description": "Bump minor/patch aws dependency updates once a month",
        "matchPackageNames": ["aws-sdk"],
        "matchUpdateTypes": ["minor", "patch"],
        "extends": ["schedule:weekly"],
        "automerge": true
      }
    ],
    "timezone": "America/Chicago",
    "schedule": ["after 8am every weekday", "before 5pm every weekday"],
    "automergeSchedule": ["after 8am every weekday","before 5pm every weekday"]
  }
}
